<% if params[:visit_complete] %>
  <div class="modal" id="visitCompleteModal">
    <div class="modal__content">
      <h2 class="modal__title">Thank You for Your Visit!</h2>
      <p class="modal__text">We hope you enjoyed exploring the AMuseum. Please come back soon!</p>
      <button class="button button--secondary modal__close" onclick="closeModal()">Close</button>
    </div>
  </div>
<% end %>
<div class="welcome">
  <div class="welcome__content">
    <h1 class="welcome__title">Welcome to the AMuseum</h1>
    <p class="welcome__text">Discover the world of AMazing art and culture</p>
    <%= form_with(url: visits_path, method: :post, class: "welcome__form") do |f| %>
      <%= f.button "Enter", class: "button button--primary welcome__button" %>
    <% end %>
  </div>
</div>
<script>
  function closeModal() {
    const modal = document.getElementById('visitCompleteModal');
    modal.style.display = 'none';
  }
</script>
